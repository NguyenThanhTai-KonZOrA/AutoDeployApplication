<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off">

  <!-- Targets to write to -->
  <targets>
    <!-- File Target for all log messages -->
    <target xsi:type="File" name="logfile"
            fileName="${basedir}/Logs/ClientLauncher_${shortdate}.log"
            archiveFileName="${basedir}/Logs/Archived/ClientLauncher_{#}.log"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="30"
            keepFileOpen="false"
            encoding="utf-8"
            layout="${longdate}|${level:uppercase=true}|${logger:shortName=true}|${message} ${exception:format=tostring}" />

    <!-- Separate file for errors only -->
    <target xsi:type="File" name="errorfile"
            fileName="${basedir}/Logs/Errors/ClientLauncher_Error_${shortdate}.log"
            archiveFileName="${basedir}/Logs/Errors/Archived/ClientLauncher_Error_{#}.log"
            archiveEvery="Day"
            archiveNumbering="Rolling"
            maxArchiveFiles="90"
            keepFileOpen="false"
            encoding="utf-8"
            layout="${longdate}|${level:uppercase=true}|${logger}|${message}${newline}${exception:format=ToString,StackTrace}" />

    <!-- Console output for debugging -->
    <target xsi:type="Console" name="console"
            layout="${time}|${level:uppercase=true}|${logger:shortName=true}|${message}" />
  </targets>

  <!-- Rules to map from logger name to target -->
  <rules>
    <!-- Write errors to separate error file -->
    <logger name="*" minlevel="Error" writeTo="errorfile" />

    <!-- Write everything from Debug and above to main log -->
    <logger name="*" minlevel="Debug" writeTo="logfile" />

    <!-- Console output in Debug mode -->
    <logger name="*" minlevel="Info" writeTo="console" />
  </rules>
</nlog>