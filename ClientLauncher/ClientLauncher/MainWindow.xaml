<Window x:Class="ClientLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ClientLauncher.ViewModels"
        xmlns:local="clr-namespace:ClientLauncher.Converters"
        mc:Ignorable="d"
        Title="Application Launcher" 
        Height="600" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Window.Resources>
        <!-- Bool to Visibility Converter -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <!-- Success to Emoji Converter -->
        <local:SuccessToEmojiConverter x:Key="SuccessToEmojiConverter"/>

        <!-- Success to Title Converter -->
        <local:SuccessToTitleConverter x:Key="SuccessToTitleConverter"/>

        <LinearGradientBrush x:Key="HeaderGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#1A2D30" Offset="0"/>
            <GradientStop Color="#274549" Offset="0.5"/>
            <GradientStop Color="#2A4D52" Offset="1"/>
        </LinearGradientBrush>
    </Window.Resources>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Grid.Row="0" 
          Background="{StaticResource HeaderGradient}"
          Height="85"
          Effect="{DynamicResource DropShadowEffect}">
            <Grid Margin="25,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left logo/title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Border CornerRadius="10" 
                      Margin="0,0,20,0"
                      Effect="{DynamicResource DropShadowEffect}">
                        <Image Source="/Assets/Images/NewLogo-01.png"
                         Height="100"
                         Width="105"/>
                    </Border>

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Application Deployment Manager"
                             FontSize="28"
                             FontWeight="Bold"
                             Foreground="White"
                             Effect="{DynamicResource TextShadowEffect}"/>
                        <TextBlock Text="Centralized Deployment and Automatic Updates"
                             FontSize="13"
                             Foreground="#E1B7A7"
                             FontWeight="Medium"
                             Margin="0,3,0,0"/>
                    </StackPanel>
                </StackPanel>

                <!-- Current Time (center column), sits just left of control bar -->
                <Border Grid.Column="2" 
                  
                  CornerRadius="12"
                  Padding="10,0,15,20"
                  VerticalAlignment="Center"
                  Effect="{DynamicResource DropShadowEffect}"
                  Margin="0,10,150,10">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="🕐" 
                             FontSize="24" 
                             VerticalAlignment="Center"
                             Foreground="#E1B7A7"
                             Margin="0,0,10,0"/>

                        <StackPanel>
                            <TextBlock Text="Current Time"
                                 FontSize="15"
                                 Foreground="#E1B7A7"
                                 HorizontalAlignment="Center"/>
                            <TextBlock Text="{Binding CurrentTime}"
                                 FontSize="24"
                                 FontWeight="Bold"
                                 Foreground="White"
                                 FontFamily="Consolas"
                                 HorizontalAlignment="Center">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="White" BlurRadius="12" ShadowDepth="0" Opacity="0.1"/>
                                </TextBlock.Effect>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" 
                  CornerRadius="12"
                  Padding="0,0,0,2"
                  VerticalAlignment="Bottom"
                  Margin="0,0,100,5">
                    <StackPanel>
                        <StackPanel>
                            <TextBlock Text="{Binding CurrentDate}"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="White"
                   FontFamily="Consolas">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="White" BlurRadius="12" ShadowDepth="0" Opacity="0.1"/>
                                </TextBlock.Effect>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">

            <!-- STEP 1: Application List -->
            <Grid Visibility="{Binding IsStep1Visible, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search and Filter -->
                <Border Grid.Row="0" 
                        Background="White" 
                        BorderBrush="#BDC3C7" 
                        BorderThickness="1" 
                        Padding="15" 
                        Margin="0,0,0,10"
                        CornerRadius="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Available Applications" 
                                       FontSize="18" 
                                       FontWeight="SemiBold"
                                       Foreground="#2C3E50"/>
                            <TextBlock Text="{Binding StatusMessage}" 
                                       FontSize="11" 
                                       Foreground="#7F8C8D"
                                       Margin="0,5,0,0"/>
                        </StackPanel>

                        <Button Grid.Column="1" 
                                Content="🔄 Refresh" 
                                Command="{Binding LoadApplicationsCommand}"
                                Padding="15,8"
                                Background="#274549"  
                                Foreground="#E1B7A7"
                                BorderThickness="0"
                                Cursor="Hand"
                                FontWeight="SemiBold">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}" 
                                                        CornerRadius="5" 
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="Center" 
                                                                      VerticalAlignment="Center"/>
                                                </Border>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#2980B9"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                </Border>

                <!-- Application List -->
                <ListBox Grid.Row="1" 
                         ItemsSource="{Binding Applications}"
                         SelectedItem="{Binding SelectedApplication}"
                         Background="White"
                         BorderBrush="#BDC3C7"
                         BorderThickness="1"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <!-- Update the application list item template to show version info and uninstall button -->
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="20" 
                Margin="15" 
                Background="#FAFAFA" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1"
                CornerRadius="8">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#ECF0F1"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Icon -->
                                    <Border Grid.Column="0" 
                        Width="50" 
                        Height="50" 
                        Background="#3498DB" 
                        CornerRadius="8"
                        VerticalAlignment="Top">
                                        <TextBlock Text="📦" 
                               FontSize="28" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Info -->
                                    <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                        <TextBlock Text="{Binding Name}" 
                               FontSize="25" 
                               FontWeight="SemiBold"
                               Foreground="#2C3E50"/>
                                        <TextBlock Text="{Binding Description}" 
                               FontSize="20" 
                               Foreground="#7F8C8D"
                               TextWrapping="Wrap"
                               Margin="0,5,0,0"/>

                                        <!-- ✅ NEW: Status and Version Info -->
                                        <TextBlock Text="{Binding StatusText}" 
                               FontSize="20" 
                               FontWeight="SemiBold"
                               TextWrapping="Wrap"
                               Margin="0,8,0,0">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsInstalled}" Value="True">
                                                            <Setter Property="Foreground" Value="#27AE60"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsInstalled}" Value="False">
                                                            <Setter Property="Foreground" Value="#E74C3C"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding HasUpdate}" Value="True">
                                                            <Setter Property="Foreground" Value="#F39C12"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>

                                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                            <Border Background="#E74C3C" 
                                Padding="6,3" 
                                CornerRadius="3"
                                Margin="0,0,8,0">
                                                <TextBlock Text="{Binding Category}" 
                                       FontSize="15" 
                                       Foreground="White"
                                       FontWeight="SemiBold"/>
                                            </Border>
                                            <Border Background="#95A5A6" 
                                Padding="6,3" 
                                CornerRadius="3">
                                                <TextBlock Text="{Binding AppCode}" 
                                       FontSize="15" 
                                       Foreground="White"
                                       FontWeight="SemiBold"/>
                                            </Border>

                                            <!-- ✅ NEW: Update Available Badge -->
                                            <Border Background="#F39C12" 
                                Padding="6,3" 
                                CornerRadius="3"
                                Margin="8,0,0,0"
                                Visibility="{Binding HasUpdate, Converter={StaticResource BoolToVisibilityConverter}}">
                                                <TextBlock Text="🆕 UPDATE" 
                                       FontSize="10" 
                                       Foreground="White"
                                       FontWeight="Bold"/>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- ✅ NEW: Uninstall Button (only for installed apps) -->
                                    <Button Grid.Column="2"
                                        Content="🗑️ Uninstall"
                                        Command="{Binding DataContext.UninstallCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                        CommandParameter="{Binding}"
                                        Padding="12,12"
                                        Background="#E74C3C"
                                            Margin="30 90 10 10"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        FontSize="11"
                                        FontWeight="SemiBold"
                                        VerticalAlignment="Center"
                                        Visibility="{Binding IsInstalled, Converter={StaticResource BoolToVisibilityConverter}}">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5" 
                                                Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Background" Value="#C0392B"/>
                                                    </Trigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>

            <!-- STEP 2: Processing -->
            <Grid Visibility="{Binding IsStep2Visible, Converter={StaticResource BoolToVisibilityConverter}}">
                <Border Background="White" 
                        BorderBrush="#BDC3C7" 
                        BorderThickness="1" 
                        CornerRadius="10"
                        Padding="40">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="⚙️" 
                                   FontSize="64" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"/>

                        <TextBlock Text="Installing Application..." 
                                   FontSize="24" 
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Foreground="#2C3E50"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="{Binding SelectedApplication.Name}" 
                                   FontSize="16" 
                                   HorizontalAlignment="Center"
                                   Foreground="#7F8C8D"
                                   Margin="0,0,0,30"/>

                        <ProgressBar Width="400" 
                                     Height="30" 
                                     Value="{Binding ProgressValue}"
                                     Maximum="100"
                                     Margin="0,0,0,15"/>

                        <TextBlock Text="{Binding StatusMessage}" 
                                   FontSize="14" 
                                   HorizontalAlignment="Center"
                                   Foreground="#34495E"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- STEP 3: Finish -->
            <Grid Visibility="{Binding IsStep3Visible, Converter={StaticResource BoolToVisibilityConverter}}">
                <Border Background="White" 
                        BorderBrush="#BDC3C7" 
                        BorderThickness="1" 
                        CornerRadius="10"
                        Padding="40">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="{Binding InstallationSuccess, Converter={StaticResource SuccessToEmojiConverter}}" 
                                   FontSize="64" 
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"/>

                        <TextBlock Text="{Binding InstallationSuccess, Converter={StaticResource SuccessToTitleConverter}}" 
                                   FontSize="24" 
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding InstallationSuccess}" Value="True">
                                            <Setter Property="Foreground" Value="#27AE60"/>
                                        </DataTrigger>
                                        <DataTrigger Binding="{Binding InstallationSuccess}" Value="False">
                                            <Setter Property="Foreground" Value="#E74C3C"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <TextBlock Text="{Binding InstallationResult}" 
                                   FontSize="14" 
                                   TextAlignment="Center"
                                   Foreground="#34495E"
                                   TextWrapping="Wrap"
                                   MaxWidth="500"
                                   LineHeight="22"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Footer / Action Buttons -->
        <Border Grid.Row="2" 
                Background="White" 
                BorderBrush="#BDC3C7" 
                BorderThickness="0,1,0,0"
                Padding="20,10">
            <Grid>
                <Button Content="⬅ Back to Applications" 
                        Command="{Binding BackToListCommand}"
                        HorizontalAlignment="Left"
                        Padding="15,8"
                        Background="#95A5A6"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontWeight="SemiBold"
                        Visibility="{Binding IsStep3Visible, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#7F8C8D"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="▶ Install Selected Application" 
                        Command="{Binding InstallCommand}"
                        HorizontalAlignment="Right"
                        Padding="20,10"
                        Background="#274549"
                        Foreground="#E1B7A7"
                        BorderThickness="0"
                        Cursor="Hand"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Visibility="{Binding IsStep1Visible, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                CornerRadius="5" 
                                                Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" 
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#229954"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#BDC3C7"/>
                                    <Setter Property="Cursor" Value="No"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <Grid.Resources>
            <DropShadowEffect x:Key="DropShadowEffect" 
                     BlurRadius="18" 
                     ShadowDepth="3" 
                     Opacity="0.15" 
                     Color="#274549"/>
            <DropShadowEffect x:Key="TextShadowEffect" 
                     BlurRadius="10" 
                     ShadowDepth="2" 
                     Opacity="0.5" 
                     Color="Black"/>
        </Grid.Resources>
    </Grid>


</Window>