<Window x:Class="ClientLauncher.Windows.LaunchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ClientLauncher.ViewModels"
        Title="Launching Application" 
        Height="400" 
        Width="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <Border Background="White" 
            CornerRadius="10" 
            BorderBrush="#3498DB" 
            BorderThickness="2">
        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="⚡ Application Launcher" 
                           FontSize="24" 
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Foreground="#2C3E50"/>
                <TextBlock Text="{Binding AppName}" 
                           FontSize="16" 
                           HorizontalAlignment="Center"
                           Foreground="#7F8C8D"
                           Margin="0,5,0,0"/>
            </StackPanel>

            <!-- Status -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock Text="{Binding StatusEmoji}" 
                           FontSize="64" 
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBlock Text="{Binding StatusMessage}" 
                           FontSize="16" 
                           TextAlignment="Center"
                           Foreground="#34495E"
                           TextWrapping="Wrap"
                           Margin="0,0,0,20"/>

                <ProgressBar Height="20" 
                             Value="{Binding ProgressValue}"
                             Maximum="100"
                             IsIndeterminate="{Binding IsIndeterminate}"
                             Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>

            <!-- Footer -->
            <Button Grid.Row="2" 
                    Content="Cancel" 
                    Command="{Binding CancelCommand}"
                    Visibility="{Binding CanCancel, Converter={StaticResource BoolToVisibilityConverter}}"
                    HorizontalAlignment="Center"
                    Padding="20,8"
                    Background="#E74C3C"
                    Foreground="White"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </Grid>
    </Border>

    
</Window>